execute block returns (i integer, o integer)
as
	-- Recursive function without forward declaration.
	declare function fibonacci(n integer) returns integer
	as
	begin
		if (n = 0 or n = 1) then
			return n;
		else
			return fibonacci(n - 1) + fibonacci(n - 2);
	end
begin
	i = 0;

	while (i < 10)
	do
	begin
		o = fibonacci(i);
		suspend;
		i = i + 1;
	end
end!

